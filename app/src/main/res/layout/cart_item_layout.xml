<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20sp"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_margin="10dp">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="2"
           android:orientation="vertical"
           >
           <ImageView
               android:id="@+id/productImagetvid"
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:src="@drawable/vegetable"
               android:scaleType="fitXY"
               />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Onion"
               android:textAlignment="center"
               android:layout_marginTop="10dp"
               android:textSize="18sp"
               android:textStyle="bold"
               android:maxLines="1"
               android:id="@+id/productNametvid"
               />

       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="3"
           android:orientation="vertical"
       android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:gravity="center"
           >
          <TextView
              android:id="@+id/currenDatetvid"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Date: "
              android:maxLines="1"
              />
           <TextView
               android:id="@+id/currentTimetvid"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Time: "
               android:layout_marginTop="5dp"
              android:maxLines="1"
              />
           <TextView
               android:id="@+id/currentPriceidTv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Price: "
               android:layout_marginTop="5dp"
              android:maxLines="1"
              />
           <TextView
               android:id="@+id/currentQuantityTvid"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
              android:text="Quantity: "
              android:maxLines="1"
              />
           <TextView
               android:id="@+id/totalPricetvid"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
              android:text="Total Price: "
              android:maxLines="1"
              />

       </LinearLayout>








    </LinearLayout>


</androidx.cardview.widget.CardView>